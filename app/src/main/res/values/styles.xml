<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreenButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#fff</item>
        <item name="colorButtonNormal">#00954D</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Button.WhiteText</item>
    </style>

    <style name="TextAppearance.AppCompat.Button.WhiteText">
        <item name="android:textColor">#fff</item>
    </style>


    <style name="WhiteButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#00954D</item>
        <item name="colorButtonNormal">#fff</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Button.GreenText</item>
    </style>

    <style name="TextAppearance.AppCompat.Button.GreenText">
        <item name="android:textColor">#00954D</item>
    </style>


</resources>
